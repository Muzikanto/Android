<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="100dp">


    <TextView
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:id="@+id/listAlarms_time" android:layout_weight="1"
            android:textSize="40sp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
    <TextView
            android:text="Mo Tu We Th Fr Sa Su"
            android:gravity="bottom"
            android:layout_width="180dp"
            android:layout_height="40dp" android:id="@+id/listAlarms_week" android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginStart="11dp" android:layout_alignTop="@+id/listAlarms_delete"
            android:layout_toEndOf="@+id/listAlarms_time" android:layout_centerVertical="false"/>

    <Switch
            android:layout_width="50dp"
            android:layout_height="wrap_content" android:id="@+id/listAlarms_enable" android:layout_weight="1"
            tools:checked="false"
            android:focusable="false"
            android:layout_centerVertical="true" android:layout_toStartOf="@+id/listAlarms_delete"
            android:layout_marginEnd="6dp"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="40dp" android:id="@+id/listAlarms_delete" android:layout_weight="1"
            android:text="x"
            android:focusable="false"
            android:layout_marginEnd="7dp" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>
