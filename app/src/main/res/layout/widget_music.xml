<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp" android:paddingRight="20dp">

    <LinearLayout
            android:background="@color/Black"
            android:textColor="@color/White"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/musicWidgetText" android:layout_weight="1"
                    android:textAlignment="center" android:textSize="18sp" android:textColor="@color/White"/>
        </LinearLayout>
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Prev"
                    android:background="@color/Black"
                    android:textColor="@color/White"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" android:id="@+id/musicWidgetPrev" android:layout_weight="1"
                    android:layout_alignParentTop="true" android:layout_toStartOf="@+id/musicWidgetPlay"
                    android:layout_marginEnd="24dp" android:textSize="18sp"/>
            <Button
                    android:text="Play"
                    android:background="@color/Black"
                    android:textColor="@color/White"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" android:id="@+id/musicWidgetPlay" android:layout_weight="1"
                    android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                    android:textSize="18sp"/>
            <Button
                    android:text="Next"
                    android:background="@color/Black"
                    android:textColor="@color/White"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" android:id="@+id/musicWidgetNext" android:layout_weight="1"
                    android:layout_marginStart="28dp" android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/musicWidgetPlay" android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>